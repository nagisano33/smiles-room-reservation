{
  "name": "smiles-room-reservation",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web": "pnpm -F \"web\"",
    "backend": "pnpm -F \"backend\"",
    "ui": "pnpm -F \"@repo/ui\"",
    "auth": "pnpm -F \"@repo/auth\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9",
    "npm": "please_use_pnpm_instead"
  },
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
